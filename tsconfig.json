{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}